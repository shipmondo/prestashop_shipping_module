{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="alert alert-info" role="alert">
    <p class="alert-text">
        {{'If you need help configuring the module, you can follow our'|trans({}, 'Modules.Shipmondo.Admin')}} <a href="https://help.shipmondo.com/articles/7197780" target="_blank">{{ 'PrestaShop guide'|trans({}, 'Modules.Shipmondo.Admin') }}</a>.
    </p>
  </div>

  <div class="alert alert-info" role="alert">
    <p class="alert-text">
        {{'When have configured the module, go to'|trans({}, 'Modules.Shipmondo.Admin')}} <a href="{{path('shipmondo_shipmondo_carriers_search')}}">{{ 'Shipping'|trans({}, 'Admin.Navigation.Menu') }} > Shipmondo</a> {{'to setup carriers'|trans({}, 'Modules.Shipmondo.Admin')}}.
    </p>
  </div>

  {{ form_start(shipmondoConfigurationForm) }}
  <div class="card">
    <h3 class="card-header">
      <i class="material-icons">settings</i> {{ 'Configuration'|trans({}, 'Admin.Global') }}
    </h3>
    <div class="card-body">
      
      <div class="form-wrapper">
        {{ form_widget(shipmondoConfigurationForm) }}
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <button class="btn btn-primary float-right" id="save-button">
          {{ 'Save'|trans({}, 'Admin.Actions') }}
        </button>
      </div>
    </div>
  </div>
  {{ form_end(shipmondoConfigurationForm) }}
{% endblock %}